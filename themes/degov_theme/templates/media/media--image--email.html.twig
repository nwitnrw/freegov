{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
 #}
{% set media_classes = [
'image',
'clearfix',
] %}
<article style="max-width: 120px; margin: 0;">
  {{ content.contextual_links }}
  <div class="image__image"{{ content.image|quickedit_attr }}>{{ content.image|field_value }}</div>
  {% spaceless %}
    <div style="line-height: 1.3em; font-family: arial,sans-serif; font-size: 11px; color: #666; padding-top: .3em">
      <div>{{ content.field_image_caption|field_value }}</div>
        {{ field_media_copyright }}
    </div>
  {% endspaceless %}
</article>
