{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
    set media_classes = [
    'document',
    'clearfix',
]
%}
<article{{ attributes.addClass(media_classes) }}>
    {{ content.contextual_links }}
    <div class="document__preview">
        <a aria-label="{{ media_aria_label }}" type="{{ media_mime }}; length={{ media_bytes }}" href="{{ media_url }}" target="_blank">
            {% if content.field_document_preview|field_value %}
                {{ content.field_document_preview|field_value }}
            {% else %}
                <i class="{{ preview_icon_class }}"></i>
            {% endif %}
        </a>
        <div class="document__type__tag">{{ content.media_bundle_label }}</div>

    </div>
    <div class="document__teaser_texts">
        {% if content.field_tags|field_value %}
            <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags }}</div>
        {% endif %}
        <div class="document__type">{{ content.media_bundle_label }}</div>
        <div class="document__title"><a aria-label="{{ media_aria_label }}" type="{{ media_mime }}; length={{ media_bytes }}" href="{{ media_url }}" target="_blank">{{ content.field_title|field_value }}</a></div>
        <div class="document__description">{{ content.field_description|field_value }}</div>
    </div>
</article>
