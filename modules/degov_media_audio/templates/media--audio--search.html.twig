{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% set media_classes = [
'audio',
'media--search',
'clearfix',
] %}
<article{{ attributes.addClass(media_classes) }}>
    <div class="media--search__type-text">{{ 'Audio'|t }}</div>
    {% if content.field_audio_preview|field_value %}
        <div class="audio__image">{{ content.field_audio_preview|field_value }}</div>
    {% else %}
        <a href="{{ audio_url }}">
            <div class="media--search__dummy"></div>
        </a>
    {% endif %}
    {{ degov_media_copyright }}
    {% if content.field_tags|field_value %}
        <div class="media--search__tags tags">{{ content.field_tags }}</div>
    {% endif %}
</article>
