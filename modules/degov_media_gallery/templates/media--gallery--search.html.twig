{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% set media_classes = [
'media',
'media-gallery',
'media--search',
'clearfix',
] %}
<article{{ attributes.addClass(media_classes) }}>
    <div class="media--search__type-text">{{ 'Galerie'|t }}</div>
    <div class="gallery__images">
        <div class="slideshow__slides">
            {{ content.field_gallery_images|field_value|slice(0, 1) }}
        </div>
    </div>
    {% if content.field_title|field_value %}
        <div class="media--search__info">
            <div class="media--search__date gallery__date">
                {{ content.field_media_publish_date|field_value }}
            </div>
            <span class="gallery__title"{{ content.field_title|quickedit_attr }}>{{ content.field_title|field_value }}</span>
        </div>
    {% endif %}
    {% if content.field_tags|field_value %}
        <div class="media--search__tags tags">{{ content.field_tags }}</div>
    {% endif %}
</article>
